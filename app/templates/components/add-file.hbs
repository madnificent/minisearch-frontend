<form onsubmit={{action this.save}}  class="ui form">
  <h4 class="ui dividing header">Core information</h4>
  <div class="two fields">
    <div class="field">
      <label>Title</label>
      {{input type="text" value=this.title placeholder="John's diary"}}
    </div>    
    <div class="field">
      <label>File</label>
      {{#if this.uploadedFile}}
        Uploaded file
      {{else}}
        <div class="ui input">
          <FileUpload @name="Upload"
            @accept="application/pdf"
            @multiple={{false}}
            @onfileadd={{action this.uploadFile}} as |queue|>
            <a class="ui button">
              {{#if queue.files.length}}
                Uploading...
              {{else}}
                Upload file
              {{/if}}
            </a>
          </FileUpload>
        </div>
      {{/if}}
    </div>
  </div>

  <h4 class="ui dividing header">Extra</h4>
  <div class="field">
    {{textarea value=this.description rows="8"}}
  </div>

  <button class="ui button">Submit</button>
</form>



{{yield}}
