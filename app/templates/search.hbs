<h1>Let there be search</h1>
<SearchInput @onSearch={{this.search.update}} />

<div class="search-results">
  We found {{this.search.results.length}} results.

  <ul>
    {{#each this.search.results as |result|}}
      <li>
        <h5>{{result.attributes.title}}</h5>
        <p>{{result.attributes.description}}</p>
      </li>
    {{/each}}
  </ul>
</div>
